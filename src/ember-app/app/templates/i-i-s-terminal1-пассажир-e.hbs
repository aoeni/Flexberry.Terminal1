<h3 class="ui header">{{t "forms.i-i-s-terminal1-пассажир-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИО
      class=(if (v-get validationModel "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-terminal1-пассажир-e.фИО-caption")
      data-test-i-i-s-terminal1-пассажир-e-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИО" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-terminal1-пассажир-e.классБилета-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.классБилета
      displayAttributeName="место"
      autocomplete=true
      relationName="классБилета"
      projection="КлассБилетаL"
      title=(t "forms.i-i-s-terminal1-пассажир-e.классБилета-caption")
      readonly=readonly
      componentName="классБилетаLookup"
      class=(if (v-get validationModel "классБилета" "isInvalid") "error")
      data-test-i-i-s-terminal1-пассажир-e-классБилета=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "классБилета" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-terminal1-пассажир-e.коды-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.коды
      displayAttributeName="кодБрони"
      autocomplete=true
      relationName="коды"
      projection="КодыL"
      title=(t "forms.i-i-s-terminal1-пассажир-e.коды-caption")
      readonly=readonly
      componentName="кодыLookup"
      class=(if (v-get validationModel "коды" "isInvalid") "error")
      data-test-i-i-s-terminal1-пассажир-e-коды=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "коды" "message")}}
  </div>
</form>
